# ============================================================================
# LORENZ AI Assistant - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# TELEGRAM CONFIGURATION (Required)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================================================
# CLAUDE AI API (Optional but Recommended)
# ============================================================================
CLAUDE_API_KEY=sk-ant-your-api-key-here

# ============================================================================
# SUPABASE DATABASE (Optional - for conversation tracking)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# EMAIL ACCOUNT 1 (Primary - Optional)
# ============================================================================
SMTP_HOST=mail.your-server.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your_smtp_password
SMTP_FROM=your-email@domain.com

IMAP_HOST=mail.your-server.com
IMAP_PORT=993
IMAP_USER=your-email@domain.com
IMAP_PASS=your_imap_password

# ============================================================================
# EMAIL ACCOUNT 2 (Secondary - Optional)
# ============================================================================
SMTP_HOST_2=mail.your-server.com
SMTP_USER_2=second-email@domain.com
SMTP_PASS_2=your_smtp_password_2
IMAP_USER_2=second-email@domain.com
IMAP_PASS_2=your_imap_password_2

# ============================================================================
# EMAIL ACCOUNT 3 (Optional)
# ============================================================================
# SMTP_HOST_3=mail.your-server.com
# SMTP_USER_3=third-email@domain.com
# SMTP_PASS_3=your_smtp_password_3
# IMAP_USER_3=third-email@domain.com
# IMAP_PASS_3=your_imap_password_3

# ============================================================================
# API SERVER (For web interface - Optional)
# ============================================================================
API_PORT=5001
API_HOST=0.0.0.0

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
