# PersonaPlex Server Environment Variables

# Hugging Face
HF_TOKEN=your_huggingface_token_here

# Server Configuration
PERSONAPLEX_HOST=0.0.0.0
PERSONAPLEX_PORT=8080
SSL_DIR=/opt/personaplex/ssl

# Model Configuration
MODEL_NAME=nvidia/personaplex-7b-v1
DEVICE=cuda
MAX_BATCH_SIZE=4

# Performance
TORCH_COMPILE=true
INFERENCE_MODE=float16

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/personaplex/server.log
