# LORENZ SaaS Backend - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=LORENZ
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://lorenz:lorenz@localhost:5432/lorenz

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# QDRANT (Vector Database)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=  # Only needed for Qdrant Cloud

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-generate-fernet-key

# =============================================================================
# OAUTH - GOOGLE
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/google/callback

# =============================================================================
# OAUTH - MICROSOFT
# =============================================================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/microsoft/callback
MICROSOFT_TENANT_ID=common

# =============================================================================
# OAUTH - LINKEDIN
# =============================================================================
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/linkedin/callback

# =============================================================================
# OAUTH - TWITTER/X
# =============================================================================
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/twitter/callback

# =============================================================================
# OAUTH - META (Facebook/Instagram)
# =============================================================================
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/meta/callback

# =============================================================================
# AI PROVIDERS
# =============================================================================
CLAUDE_API_KEY=sk-ant-xxx
# OPENAI_API_KEY=sk-xxx
# GROQ_API_KEY=gsk_xxx

# =============================================================================
# TELEGRAM
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram

# =============================================================================
# EMAIL (Default IMAP server for IMAP accounts)
# =============================================================================
DEFAULT_IMAP_HOST=mail.hyperloopitalia.com
DEFAULT_SMTP_HOST=mail.hyperloopitalia.com

# =============================================================================
# S3 STORAGE (Optional - for file uploads)
# =============================================================================
# S3_ENDPOINT=http://localhost:9000  # For MinIO
# S3_ACCESS_KEY=lorenz
# S3_SECRET_KEY=lorenzpass
# S3_BUCKET_NAME=lorenz-files

# =============================================================================
# STRIPE (Optional - for billing)
# =============================================================================
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# STRIPE_PRICE_ID_PRO=price_xxx
# STRIPE_PRICE_ID_BUSINESS=price_xxx

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_URL=http://localhost:3000
